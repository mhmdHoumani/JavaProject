<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>

<AnchorPane prefHeight="361.0" prefWidth="550.0"
	xmlns="http://javafx.com/javafx/15.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="library.management.ui.listmember.MemberListController">
	<children>
		<TableView fx:id="tableView" layoutX="54.0" layoutY="82.0"
			prefHeight="482.0" prefWidth="654.0" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<columns>
				<TableColumn fx:id="nameColl" prefWidth="75.0"
					text="Name" />
				<TableColumn fx:id="idColl" prefWidth="75.0"
					text="Member Id" />
				<TableColumn fx:id="mobileColl" prefWidth="75.0"
					text="Mobile" />
				<TableColumn fx:id="emailColl" prefWidth="75.0"
					text="Email" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
			<contextMenu>
				<ContextMenu>
					<items>
						<MenuItem mnemonicParsing="false"
							onAction="#handleRefresh" text="Refresh" />
						<MenuItem mnemonicParsing="false"
							onAction="#handleMemberEdit" text="Edit" />
						<MenuItem mnemonicParsing="false"
							onAction="#handleMemberDelete" text="Delete" />
					</items>
				</ContextMenu>
			</contextMenu>
		</TableView>
	</children>
</AnchorPane>
