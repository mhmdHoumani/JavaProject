<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" maxHeight="-Infinity"
	maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
	prefHeight="400.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/15.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="library.management.ui.listbook.BookListController">
	<children>
		<TableView fx:id="tableView" layoutX="44.0" layoutY="72.0"
			prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<columns>
				<TableColumn fx:id="titleColl" prefWidth="75.0"
					text="Title" />
				<TableColumn fx:id="idColl" prefWidth="75.0"
					text="Book Id" />
				<TableColumn fx:id="authorColl" prefWidth="75.0"
					text="Author" />
				<TableColumn fx:id="publisherColl" prefWidth="75.0"
					text="Publisher" />
				<TableColumn fx:id="availableColl" prefWidth="75.0"
					text="Available" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
			<contextMenu>
				<ContextMenu>
					<items>
						<MenuItem mnemonicParsing="false"
							onAction="#handleRefresh" text="Refresh" />
						<MenuItem mnemonicParsing="false"
							onAction="#handleBookEdit" text="Edit" />
						<MenuItem mnemonicParsing="false"
							onAction="#handleBookDelete" text="Delete" />
					</items>
				</ContextMenu>
			</contextMenu>
		</TableView>
	</children>
</AnchorPane>
