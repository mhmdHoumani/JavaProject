<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../Styles/darktheme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
   <children>
      <VBox alignment="CENTER" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
         <children>
            <HBox prefHeight="35.0" prefWidth="578.0">
               <children>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/member.png" />
                     </image>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </ImageView>
                  <JFXTextField fx:id="username" labelFloat="true" prefHeight="30.0" prefWidth="619.0" promptText="User Name">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </JFXTextField>
               </children>
            </HBox>
            <VBox>
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                           <image>
                              <Image url="@../icons/pass.png" />
                           </image>
                        </ImageView>
                        <JFXPasswordField fx:id="hidenPass" labelFloat="true" prefHeight="30.0" prefWidth="583.0" promptText="Password">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </JFXPasswordField>
                     </children>
                  </HBox>
                  <JFXTextField fx:id="viewPass" labelFloat="true" prefHeight="37.0" prefWidth="517.0" promptText="Password" visible="false">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXToggleButton fx:id="isVisible" prefHeight="70.0" text="Show Password" textAlignment="CENTER" textFill="#e5d9d9" toggleColor="#00cc00" toggleLineColor="#75e46b" unToggleColor="RED" unToggleLineColor="#ffb5b5">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </JFXToggleButton>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
      <HBox accessibleRole="TOGGLE_BUTTON" alignment="CENTER" layoutX="200.0" layoutY="318.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="300.0">
         <children>
            <JFXButton fx:id="loginBtn" onAction="#loginAction" prefHeight="50.0" prefWidth="106.0" text="Login">
               <font>
                  <Font size="16.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </JFXButton>
         </children>
      </HBox>
      <JFXToggleButton fx:id="isAdmin" layoutX="462.0" layoutY="32.0" prefHeight="70.0" text="Admin" textAlignment="CENTER" textFill="WHITE" toggleColor="#00cc00" toggleLineColor="#75e46b" unToggleColor="RED" unToggleLineColor="#ffb5b5">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </JFXToggleButton>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
