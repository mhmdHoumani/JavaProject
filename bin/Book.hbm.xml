<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.6//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.6.dtd">


<hibernate-mapping>

<class name="Model.Book" table="Book">
		
		<id name="isbn" >
		<column name="Isbn"></column>
		<generator class="identity"></generator>
		
		
		</id>
	
		<property name="bookAuthor" column="BookAuthor"/>
		<property name="bookName" column="BookName"/>
		<property name="publisher" column="Publisher"/>
		<property name="period" column="Period"/>
		<one-to-one name="issue" class="Model.Issue" cascade="save-update"/>
		
	</class>
</hibernate-mapping>