<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.6//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.6.dtd">


<hibernate-mapping>
<class name="Model.Issue" table="Issue">
		 <id name="isbn" type="java.lang.String">
    <column name="Isbn" />
    <generator class="foreign">
    <param name="property">book</param>
    </generator></id>
    <one-to-one name="book" class="Model.Book" constrained="true">
    </one-to-one>
		
		<many-to-one name="employee" column="EmployeeId" class="Model.Employee"></many-to-one>
		<many-to-one name="member" column="MemberId"></many-to-one>
		<property name="issueDate" column="IssueDate"></property>
	</class>
</hibernate-mapping>

   