<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefWidth="150.0" stylesheets="@../Styles/darktheme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ToolbarController">
   <children>
      <JFXButton fx:id="addMemberBtn" alignment="CENTER" contentDisplay="TOP" onAction="#addingAction" prefHeight="400.0" prefWidth="150.0" ripplerFill="BLUE" styleClass="toolbar-button" text="Add Member" textAlignment="CENTER">
         <graphic>
            <ImageView fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/add_mem.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton fx:id="addBookBtn" alignment="CENTER" contentDisplay="TOP" onAction="#addingAction" prefHeight="400.0" prefWidth="150.0" ripplerFill="BLUE" styleClass="toolbar-button" text="Add Book">
         <graphic>
            <ImageView fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/add_book.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton fx:id="viewMembersBtn" alignment="CENTER" contentDisplay="TOP" onAction="#viewingAction" prefHeight="400.0" prefWidth="150.0" ripplerFill="BLUE" styleClass="toolbar-button" text="View Members">
         <graphic>
            <ImageView fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/list_mem.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton fx:id="viewBooksBtn" alignment="CENTER" contentDisplay="TOP" onAction="#viewingAction" prefHeight="400.0" prefWidth="150.0" ripplerFill="BLUE" styleClass="toolbar-button" text="View Books">
         <graphic>
            <ImageView fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/list_book.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton fx:id="settingsBtn" alignment="CENTER" contentDisplay="TOP" onAction="#settingsAction" prefHeight="400.0" prefWidth="150.0" ripplerFill="BLUE" styleClass="toolbar-button" text="Settings">
         <graphic>
            <ImageView fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/settings.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
   </children>
</VBox>
